 <div class="toolbar wrapper">
        
    <a class="button button-grey toolbar-control" href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}">
        Back
    </a>
   
    {% if ('edit' in actions) and (not hide_edit) %}
  
        <a class="button button-green toolbar-control" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id': entity.id }) }}" }}">
            Edit
        </a>
    {% endif %}

    {% if ('delete' in actions) and (not hide_delete) %}
   
        <form class="toolbar-control" name='{{ route_name_prefix }}_delete' id='{{ route_name_prefix }}_delete' action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': entity.id }) }}" }}" method="post">
            {{ '{{ form_widget(delete_form) }}' }}
            <button class="button-red" type="submit">Delete</button>
        </form>
        
     {% endif %}

</div>
